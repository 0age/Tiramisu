{
  "name": "L2",
  "version": "0.0.1",
  "author": "Dharma Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dharmaprotocol/L2.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --debug-check",
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "build": "./node_modules/.bin/truffle compile",
    "migrate": "./node_modules/.bin/truffle migrate -- --network development",
    "test": "npm run build && npm run test:blockchain && npm run test:state && npm run test:state-machine && npm run test:coverage",
    "test:no-cov": "npm run build && npm run test:blockchain && npm run test:state && npm run test:state-machine",
    "test:blockchain": "mocha ./test/tests/Blockchain.spec.js",
    "test:state": "mocha ./test/tests/State.spec.js",
    "test:state-machine": "mocha ./test/tests/StateMachine.spec.js",
    "test:app": "npm run build && npm run test:state && npm run test:state-machine",
    "test:coverage": "./node_modules/.bin/truffle run coverage --file=\"test/placeholder.js\"",
    "prettier": "prettier --write",
    "start": "node ./node_modules/ganache-cli/cli"
  },
  "dependencies": {
    "ethereumjs-utils": "^5.2.5",
    "keccak256": "^1.0.0",
    "solc": "^0.6.0",
    "solidity-coverage": "^0.7.4",
    "sparse-merkle-tree": "^1.0.0",
    "truffle": "^5.1.21",
    "web3": "^1.2.6"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "ganache-cli": "^6.9.1",
    "ganache-core": "^2.10.2",
    "husky": "^4.2.1",
    "lint-staged": "^9.2.1",
    "mocha": "^7.1.1",
    "prettier": "1.16.4",
    "pretty-quick": "^2.0.1"
  }
}
