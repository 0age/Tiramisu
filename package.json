{
  "name": "L2",
  "version": "0.0.1",
  "author": "Dharma Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dharmaprotocol/L2.git"
  },
  "mocha": {
    "enableTimeouts": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --debug-check",
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "build:ts": "tsc",
    "build:sol": "./node_modules/.bin/truffle compile",
    "build:ts:tests": "tsc --project ./tsconfig.test.json",
    "lint": "./node_modules/.bin/solium -d .",
    "migrate": "./node_modules/.bin/truffle migrate -- --network development",
    "mocha:ts": "mocha -r ts-node/register",
    "test:blockchain": "npm run mocha:ts -- ./test/tests/Blockchain.spec.ts",
    "test:state": "npm run mocha:ts -- ./test/tests/State.spec.ts",
    "test:transactions": "NODE_ENV=all npm run mocha:ts -- ./test/tests/transactions/index.spec.ts",
    "test:app": "npm run build:sol && NODE_ENV=all npm run mocha:ts -- \"./test/tests/**/*.spec.ts\"",
    "test:coverage:sol": "npm run build:ts:tests && NODE_ENV=coverage ./node_modules/.bin/truffle run coverage --file=\"test/tests/BlockchainCoverage.spec.js\" && rm -rf ./dist-test",
    "test:coverage:app": "nyc npm run test:app",
    "test:coverage": "npm run test:coverage:app && npm run test:coverage:sol",
    "test": "test:app && test:coverage",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "prettier": "prettier --write",
    "start": "node ./node_modules/ganache-cli/cli",
    "start:app": "ts-node ./app/index.ts"
  },
  "dependencies": {
    "ethereumjs-utils": "^5.2.5",
    "ethlint": "^1.2.5",
    "keccak256": "^1.0.0",
    "solc": "^0.6.0",
    "solidity-coverage": "^0.7.4",
    "sparse-merkle-tree": "^1.0.0",
    "truffle": "^5.1.21",
    "web3": "^1.2.6"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^7.0.2",
    "@types/web3": "^1.2.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.11",
    "ganache-cli": "^6.9.1",
    "ganache-core": "^2.10.2",
    "husky": "^4.2.1",
    "lint-staged": "^9.2.1",
    "mocha": "^7.1.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.0.1",
    "prettier": "1.16.4",
    "pretty-quick": "^2.0.1",
    "source-map-support": "^0.5.18",
    "truffle-typings": "^1.0.8",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "lcov"
    ],
    "sourceMap": true
  }
}
